<Page x:Class="Examen23012020.PaymentsOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Examen23012020"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentsOverviewPage"
      Loaded="Page_Loaded">

    <StackPanel HorizontalAlignment="Center">
        <Label Content="Overzicht Betalingen" HorizontalAlignment="Center" Margin="0 25" FontSize="40" />
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="ListBoxPayments" Width="300" Height="300" />
            <StackPanel Margin="10 0 0 0">
                <Button x:Name="ButtonAddPayment" Content="Nieuwe Betaling Toevoegen" Width="150" Height="40" VerticalAlignment="Top" Click="ButtonAddPayment_Click" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>